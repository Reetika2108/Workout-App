<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textColor="@color/white"
        android:text="Login"
        android:textSize="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@id/userName"
        />

    <com.example.workoutapp.EditTextCustom
        android:id="@+id/userName"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:setColor1="true"
        android:layout_marginTop="20dp"
        app:setHint="Enter Registered Email"
        tools:ignore="MissingConstraints"></com.example.workoutapp.EditTextCustom>

    <com.example.workoutapp.EditTextCustom
        android:id="@+id/userPassword"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
        android:drawablePadding="20dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:setColor1="true" />


</androidx.constraintlayout.widget.ConstraintLayout>